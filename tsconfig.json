{
   "compilerOptions": {
        "outDir": "./dist/",
     "baseUrl": ".",
     "noImplicitAny": true,
       "module": "ESNext",
       "target": "ES5",
       "jsx": "react-jsx",
       "allowJs": true,
       "moduleResolution": "Node",
     "esModuleInterop": true,
     "allowSyntheticDefaultImports": true,
     "paths": {
       "*": ["./src/*"]
     }
   },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "exclude": [
    "node_modules"
  ]
}